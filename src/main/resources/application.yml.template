          filters:
            - StripPrefix=1  # "/aurudalogin" 경로 제거

        - id: AurudaTrip
          uri: http://auruda-trip:8082 # Docker 컨테이너 이름 유지
          predicates:
            - Path=/aurudatrip/**
          filters:
            - StripPrefix=1  # "/aurudatrip" 경로 제거

        - id: AurudaArticle
          uri: http://auruda-article:8083 # Docker 컨테이너 이름 유지
          predicates:
            - Path=/aurudaarticle/**
          filters:
            - StripPrefix=1  # "/aurudaarticle" 경로 제거
